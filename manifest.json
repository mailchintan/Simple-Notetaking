{
    "manifest_version": 2, 
    "name": "Simple Notetaking",
    "description": "Just a simple plugin to be built by the attendees of Google Chrome Plugin Development workshop at Hello World 2016.", 
    "version": "1.0.0",
    "icons": { 
        "16": "icons/16x16.png", 
        "48": "icons/48x48.png",
        "128": "icons/128x128.png" 
    },
    "background": { 
        "scripts": [
            "background.js"
        ] },

    "browser_action": {
        "default_icon": {
            "48": "icons/48x48.png",
            "128": "icons/128x128.png"
        },
        "default_title": "Simple Notetaking",
        "default_popup": "views/popup.html"
    },
    "permissions": ["storage"]
}